<clickhouse>
    <storage_configuration>
        <disks>
            <!-- Real S3 disk -->
            <s3_disk>
                <type>s3</type>
                <endpoint>https://nbg1.your-objectstorage.com/rybbit/clickhouse/</endpoint>
                <access_key_id from_env="S3_ACCESS_KEY"/>
                <secret_access_key from_env="S3_SECRET_KEY"/>
                <region>nbg1</region>
                <use_virtual_addressing>false</use_virtual_addressing>

                <!-- Local metadata directory for S3 parts -->
                <metadata_path>/var/lib/clickhouse/disks/s3_disk/</metadata_path>
            </s3_disk>

            <!-- Cache disk definition -->
            <s3_cache>
                <type>cache</type>
                <disk>s3_disk</disk>  <!-- Cache disk uses the real S3 disk -->
                <path>/var/lib/clickhouse/disks/s3_cache/</path> <!-- Cache disk's own path -->
                <max_size>10Gi</max_size> <!-- Limit cache to 10 GiB -->
            </s3_cache>
        </disks>

        <policies>
            <s3_policy>
                <volumes>
                    <main>
                        <disk>s3_cache</disk>  <!-- Cache disk for volume -->
                    </main>
                </volumes>
            </s3_policy>
        </policies>
    </storage_configuration>

    <!-- Optional: Make S3 the default storage policy for new tables -->
    <profiles>
        <default>
            <default_storage_policy>s3_policy</default_storage_policy>
        </default>
    </profiles>
</clickhouse>
