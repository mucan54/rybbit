<clickhouse>
    <storage_configuration>
        <disks>
            <!-- Default disk configuration -->
            <default>
                <type>local</type>
                <path>/var/lib/clickhouse/</path>
            </default>

            <!-- Real S3 disk -->
            <s3_disk>
                <type>s3</type>
                <endpoint>https://nbg1.your-objectstorage.com/rybbit/clickhouse/</endpoint>
                <access_key_id from_env="S3_ACCESS_KEY"/>
                <secret_access_key from_env="S3_SECRET_KEY"/>
                <region>nbg1</region>
                <use_virtual_addressing>false</use_virtual_addressing>

                <metadata_path>/var/lib/clickhouse/disks/s3_disk/</metadata_path>
            </s3_disk>

            <!-- Cache disk (optional) -->
            <s3_cache>
                <type>cache</type>
                <disk>s3_disk</disk>
                <path>/var/lib/clickhouse/disks/s3_cache/</path>
                <max_size>10Gi</max_size>
            </s3_cache>
        </disks>

        <policies>
            <!-- New policy that includes both default and s3 disks -->
            <s3_policy>
                <volumes>
                    <main>
                        <disk>default</disk>
                        <disk>s3_disk</disk>  <!-- Combine local and S3 disk for main volume -->
                    </main>
                </volumes>
            </s3_policy>
        </policies>
    </storage_configuration>

    <profiles>
        <default>
            <default_storage_policy>s3_policy</default_storage_policy>
        </default>
    </profiles>
</clickhouse>
