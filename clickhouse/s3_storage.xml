<clickhouse>
    <storage_configuration>
        <disks>
            <!-- Correct definition for default disk -->
            <default>
                <type>local</type>
                <path>/var/lib/clickhouse/</path> <!-- Path for default disk -->
            </default>

            <!-- Real S3 disk -->
            <s3_disk>
                <type>s3</type>
                <endpoint>https://nbg1.your-objectstorage.com/rybbit/clickhouse/</endpoint>
                <access_key_id from_env="S3_ACCESS_KEY"/>
                <secret_access_key from_env="S3_SECRET_KEY"/>
                <region>nbg1</region>
                <use_virtual_addressing>false</use_virtual_addressing>
                <metadata_path>/var/lib/clickhouse/disks/s3_disk/</metadata_path>
            </s3_disk>

            <!-- Cache disk (optional) -->
            <s3_cache>
                <type>cache</type>
                <disk>s3_disk</disk>
                <path>/var/lib/clickhouse/disks/s3_cache/</path>
                <max_size>10Gi</max_size>
            </s3_cache>
        </disks>

        <policies>
            <s3_policy>
                <volumes>
                    <main>
                        <disk>s3_cache</disk>  <!-- Use s3_cache for main storage -->
                    </main>

                    <!-- Ensure default volume is present in the policy -->
                    <default>
                        <disk>default</disk>  <!-- Default volume should use default disk -->
                    </default>
                </volumes>
            </s3_policy>
        </policies>
    </storage_configuration>

    <profiles>
        <default>
            <default_storage_policy>s3_policy</default_storage_policy> <!-- Make S3 the default storage policy -->
        </default>
    </profiles>
</clickhouse>
